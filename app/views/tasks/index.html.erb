<h1>Listing Tasks</h1>

<%= link_to "Add a new task", new_task_path %>
<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
  <p><%= task.content %></p>
  <p><%= task.completed %></p>
  <%= link_to "Voir la tache", task_path(task) %> |
  <%= link_to "Delete", task_path(task), method: :delete, data: { confirm:
    "Are your sure?" } %>
<% end %>
